{
    "name": "xtony77/lampheart",
    "description": "The Lantern Framework.",
    "keywords": ["framework", "lantern", "lampheart"],
    "license": "MIT",
    "authors": [
        {
            "name": "xtony77",
            "email": "xtony77@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-json": "*",
        "ext-openssl": "*",
        "illuminate/database": "^7.0",
        "phroute/phroute": "^2.1",
        "php-di/php-di": "^6.0",
        "illuminate/validation": "^7.0",
        "monolog/monolog": "^2.0",
        "illuminate/view": "^7.0",
        "predis/predis": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.3"
    },
    "replace": {
        "lampheart/console": "self.version",
        "lampheart/providers": "self.version",
        "lampheart/support": "self.version",
        "lampheart/testing": "self.version"
    },
    "autoload": {
        "psr-4": {
            "lampheart\\": "src/lampheart/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
